<h1><%= @todoit_list.title %></h1>

<table class="todoit_items">
  <% @todoit_list.todoit_items.each do |todoit_item| %>
  <tr id="<%= dom_id(todoit_item) %>">
    <td>
      <% if todoit_item.completed? %>
      <%= todoit_item.completed_at %>
    <% else %>
      <%= link_to "Mark as Complete", complete_todoit_list_todoit_item_path(todoit_item),
        method: :patch %>
    <% end %>
    </td>
    <td><%= todoit_item.content %></td>
    <td>
    <%= link_to "Edit", edit_todoit_list_todoit_item_path(todoit_item) %>
    <%= link_to "Delete", todoit_list_todoit_item_path(todoit_item), method: :delete, data: { confirm: "Are you sure?" } %>
  </td>
  <% end %>
</tr>

<p>
  <%= link_to "New todoit Item", new_todoit_list_todoit_item_path %>
</p>