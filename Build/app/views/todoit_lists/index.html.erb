<h1>ToDoIt Lists</h1>

<% @todoit_lists.each do |todoit_list| %>
<div class="todoit_list" id="<%= dom_id(todoit_list) %>">
      <tr id="<%= dom_id(todoit_list) %>">
        <h2><%= todoit_list.title %></h2>
        <p><%= todoit_list.description %></p>
        <ul class="functions">
          <li> <%= link_to "List Items", todoit_list_todoit_items_path(todoit_list) %> </li>
          <li> <%= link_to 'Show', todoit_list %></li>
          <li> <%= link_to 'Edit', edit_todoit_list_path(todoit_list) %></li>
          <li> <%= link_to 'Destroy', todoit_list, method: :delete, data: { confirm: 'Are you sure?' } %></li>
        </ul>
    </div>
<% end %>

<br class="clear">

